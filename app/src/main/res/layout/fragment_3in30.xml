<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/tabs_shadow"
            android:layout_height="20dp"
            style="@style/shadowBottom"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/beach_seaside"/>

        <GridLayout
            android:id="@+id/top_campaign_3in30_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="7"
            android:columnCount="1"
            android:paddingHorizontal="20dp"
            android:background="@color/transparent">

            <ImageView
                android:id="@+id/img_3in30"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_gravity="center"
                android:layout_columnWeight="15"
                android:src="@drawable/center3in30" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/endin"
                android:text="@string/endsin"
                android:layout_column="0"
                android:layout_row="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                style="@style/centerGravityAlignment" />

            <GridLayout
                android:id="@+id/count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:rowCount="1"
                android:columnCount="4"
                android:layout_gravity="center"
                android:textAlignment="center">

                <TextView android:id="@+id/cd_days"
                    style="@style/countDownTimer"
                    android:layout_column="0"
                    android:layout_row="0" />

                <TextView android:id="@+id/cd_hours"
                    style="@style/countDownTimer"
                    android:layout_column="1"
                    android:layout_row="0" />

                <TextView android:id="@+id/cd_minutes"
                    style="@style/countDownTimer"
                    android:layout_column="2"
                    android:layout_row="0" />

                <TextView android:id="@+id/cd_seconds"
                    style="@style/countDownTimer"
                    android:layout_column="3"
                    android:layout_row="0" />



            </GridLayout>


            <TextView
                android:id="@+id/campaign_3in30_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="@string/Feets_kick_start"
                android:fontFamily="@font/baloobhaijaan_regular"
                style="@style/centerGravityAlignment" />

            <TextView
                android:id="@+id/your_chance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:fontFamily="@font/calibri"
                android:text="@string/your_chances_of"
                android:layout_marginBottom="10dp"
                style="@style/centerGravityAlignment"/>


            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_column="0"
                android:layout_row="5"
                android:background="@drawable/plain_divider"
                style="@style/centerGravityAlignment"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:id="@+id/campaign_3in30_description"
                android:text="@string/three_free_trips"
                android:fontFamily="@font/calibri"
                android:layout_marginTop="10dp"
                style="@style/centerGravityAlignment" />

        </GridLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/bali_indo_card"
            android:layout_below="@id/top_campaign_3in30_description"
            android:layout_width="match_parent"
            android:layout_height="125sp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/bali_indo_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/first_place"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/calibri"
                android:textColor="@color/colorAccent"
                android:padding="4dp"
                android:background="@drawable/trapezium_prize_position" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <TextView
                    android:id="@+id/bali_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bali"
                    android:fontFamily="@font/lobster_regular"
                    android:textSize="50sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/indo_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indonesia"
                    android:fontFamily="@font/lobster_regular"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </LinearLayout>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_forward_arrow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>



        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/phuket_thai_card"
            android:layout_below="@id/bali_indo_card"
            android:layout_width="match_parent"
            android:layout_height="125sp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/phuket_thai_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/second_place"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/calibri"
                android:textColor="@color/white"
                android:padding="4dp"
                android:background="@drawable/trapezium_prize_position" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <TextView
                    android:id="@+id/phuket_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phuket"
                    android:fontFamily="@font/lobster_regular"
                    android:textSize="50sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/thai_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thailand"
                    android:fontFamily="@font/lobster_regular"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </LinearLayout>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_forward_arrow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/krabi_thai_card"
            android:layout_below="@id/phuket_thai_card"
            android:layout_width="match_parent"
            android:layout_height="125sp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/krabi_thai_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/third_place"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/calibri"
                android:textColor="@color/white"
                android:padding="4dp"
                android:background="@drawable/trapezium_prize_position" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <TextView
                    android:id="@+id/krabi_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/krabi"
                    android:fontFamily="@font/lobster_regular"
                    android:textSize="50sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/thai_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thailand"
                    android:fontFamily="@font/lobster_regular"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </LinearLayout>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_forward_arrow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/rules_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/krabi_thai_card"/>

        <TextView
            android:id="@+id/tips_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/rules_list"/>


    </RelativeLayout>
</ScrollView>