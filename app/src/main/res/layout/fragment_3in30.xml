<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/tabs_shadow"
        android:layout_height="20dp"
        style="@style/shadowBottom"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/beach_seaside"/>

    <GridLayout
        android:id="@+id/top_campaign_3in30_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="7"
        android:columnCount="1"
        android:paddingHorizontal="20dp"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/img_3in30"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:layout_columnWeight="15"
            android:src="@drawable/center3in30" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/endin"
            android:text="@string/endsin"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            style="@style/centerGravityAlignment" />

        <TextView
            android:id="@+id/count_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="count down here"
            style="@style/centerGravityAlignment"/>

        <TextView
            android:id="@+id/campaign_3in30_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/Feets_kick_start"
            android:fontFamily="@font/baloobhaijaan_regular"
            style="@style/centerGravityAlignment" />

        <TextView
            android:id="@+id/your_chance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:fontFamily="@font/calibri"
            android:text="@string/your_chances_of"
            android:layout_marginBottom="10dp"
            style="@style/centerGravityAlignment"/>


        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_row="5"
            android:background="@drawable/plain_divider"
            style="@style/centerGravityAlignment"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:id="@+id/campaign_3in30_description"
            android:text="@string/three_free_trips"
            android:fontFamily="@font/calibri"
            android:layout_marginTop="10dp"
            style="@style/centerGravityAlignment" />

    </GridLayout>

    <RelativeLayout
        android:layout_below="@id/top_campaign_3in30_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/first_place"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/bali"
            android:textColor="@color/white"

            />

    </RelativeLayout>


</RelativeLayout>