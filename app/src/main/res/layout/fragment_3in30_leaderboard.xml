<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/blue_gradient_roundedbg_3in30" />


    <GridLayout
        android:id="@+id/leaderboardGrid3in30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/tabs"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:rowCount="4">


        <ImageView
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="fill"
            android:scaleType="centerCrop"
            android:layout_columnWeight="15"
            android:src="@drawable/potrait_girl" />

        <ImageView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="fill"
            android:scaleType="centerCrop"
            android:layout_columnWeight="15"
            android:src="@drawable/potrait_girl" />

        <ImageView
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="fill"
            android:scaleType="centerCrop"
            android:layout_columnWeight="15"
            android:src="@drawable/potrait_girl" />


        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="15"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/rank"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="15"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/rank"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="15"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/rank"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:layout_columnWeight="15"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/rank"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:layout_columnWeight="15"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/rank"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:layout_columnWeight="15"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/rank"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </GridLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/leaderboardGrid3in30"></ListView>

</RelativeLayout>
