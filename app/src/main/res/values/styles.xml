<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/StartColor3in30</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainActivityToolbar">
        <item name="android:color">@color/white</item>
    </style>

    <style name="userLeaderboard">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="userLeaderboardMiddle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="campaignTopPointsLeaderboard">
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkGreyOpacity</item>
        <item name="android:drawableLeft">@drawable/ic_announcement</item>
        <item name="android:drawableTint">@color/flameOrange</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="campaignTopNameLeaderboard">
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="shadowTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/shadow_top</item>
    </style>

    <style name="shadowBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/shadow</item>
    </style>

    <style name="campaignTopPosition">
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/circle_with_numbers</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
