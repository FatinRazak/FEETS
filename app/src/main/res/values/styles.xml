<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="Campaign3in30" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainActivityToolbar">
        <item name="android:color">@color/white</item>
    </style>

    <style name="shadowTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/shadow_top</item>
    </style>

    <style name="shadowBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/shadow</item>
    </style>

    <!--activity_main 3in30-->

    <style name="WhiteNumbersBoldWithOpaBlackBg">
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/black_rounded_opacity</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WhiteTextScoreRank">
        <item name="android:layout_gravity">fill|center</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!--fragment_3in30_leaderboard-->

    <style name="userLeaderboard">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">20sp</item>
    </style>

    <style name="userLeaderboardMiddle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">20sp</item>
        <!--<item name="android:background">@drawable/white_oval</item>-->
    </style>
    
    <style name="campaignTopPointsLeaderboard">
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkGreyOpacity</item>
        <item name="android:drawableStart">@drawable/ic_boost</item>
        <item name="android:drawableTint">@color/flameOrange</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="campaignTopNameLeaderboard">
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">15</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="campaignTopPosition">
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/circle_with_numbers</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <!--fragment_3in30-->

    <style name="centerGravityAlignment">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="countDownTimer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/fivedp</item>
        <item name="android:padding">@dimen/fivedp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/countDownTextSize</item>

    </style>

    <!--fragment_Challenge-->

    <style name="testListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/lightGrey</item>
        <item name="android:dividerHeight">@dimen/fivedp</item>
        <item name="android:listSelector">@color/StartColor3in30Opacity</item>
    </style>


</resources>
